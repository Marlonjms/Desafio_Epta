generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  VENDEDOR
  VISTORIADOR
}

enum StatusVistoria {
  PENDENTE
  APROVADO
  REPROVADO
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  vistorias Vistoria[]
  notifications Notification[]
  createdAt DateTime @default(now())
}

model Vistoria {
  id        String   @id @default(uuid())
  cliente   String
  placa     String
  modelo    String
  ano       Int
  valor     Float
  status    StatusVistoria @default(PENDENTE)

  vendedor   User   @relation(fields: [vendedorId], references: [id])
  vendedorId String

  motivo     MotivoReprovacao? @relation(fields: [motivoId], references: [id])
  motivoId   String?

  comentario String?
  createdAt  DateTime @default(now())
}

model MotivoReprovacao {
  id        String   @id @default(uuid())
  descricao String
  vistorias Vistoria[]
}

model Notification {
  id        String   @id @default(uuid())
  message   String
  read      Boolean  @default(false)

  user   User   @relation(fields: [userId], references: [id])
  userId String

  createdAt DateTime @default(now())
}
